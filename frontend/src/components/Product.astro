---
import type { Coffee } from "../types/coffee";
const { _id, name, description, price, available } = Astro.props as Coffee;
---

<a
    href=`/coffee/${_id}`
    class="bg-white rounded-lg shadow-md overflow-hidden transition-all duration-300 ease-in-out hover:shadow-xl hover:scale-102 border hover:border-gray-100"
>
    <img
        src="/coffee-mockup.webp"
        alt={name}
        class="w-full h-48 object-cover"
    />
    <div class="p-6">
        <h3 class="text-xl font-bold mb-2">{name}</h3>
        <p class="text-gray-600 mb-4">{description}</p>
        <div class="flex justify-between items-center">
            <span class="text-2xl font-bold text-coffee-dark">
                ${price}
            </span>
            <span
                class={`px-3 py-1 rounded-full text-sm ${
                    available
                        ? "bg-green-100 text-green-800"
                        : "bg-red-100 text-red-800"
                }`}
            >
                {available ? "In Stock" : "Out of Stock"}
            </span>
        </div>
    </div>
</a>
