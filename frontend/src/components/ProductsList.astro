---
import type { Coffee } from "../types/coffee";
import Product from "./Product.astro";
const { products } = Astro.props as { products: Coffee[] };
---

<section id="products" class="py-20 bg-gray-50">
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
    <h2 class="text-4xl font-bold text-center mb-12">Our Coffee Selection</h2>

    {
      products.length > 0 ? (
        <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
          {products.map((product) => (
            <Product {...product} key={product._id} />
          ))}
        </div>
      ) : (
        <p class="text-center text-gray-600">There are no products available</p>
      )
    }
  </div>
</section>
