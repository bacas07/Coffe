---
import Layout from "../../layouts/Layout.astro";
import { getCoffees, getCoffeById } from "../../lib/api";

const { id } = Astro.params;
console.log(id);

export async function getStaticPaths() {
    const coffees = await getCoffees();

    return coffees.map((coffee) => ({
        params: { id: coffee._id },
    }));
}

const coffee = await getCoffeById(id);

if (!coffee) {
    return new Response(null, {
        status: 404,
        statusText: "Not Found",
    });
}
---

<Layout title={`${coffee.name} - CafÃ©Delight`}>
    <div class="bg-gray-50 py-16">
        <div class="max-w-4xl mx-auto py-20 px-4 sm:px-6 lg:px-8">
            <a
                href="/coffees"
                class="inline-flex items-center text-coffee-light hover:text-coffee-dark mb-8"
            >
                <svg
